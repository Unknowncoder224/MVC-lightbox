@model List<Product>
<link rel="stylesheet" href="/Content/CSS/NZ2-Columns.css" type="text/css" />
<link rel="stylesheet" href="/Content/CSS/Style.css" type="text/css" />
@{
    ViewBag.Title = "ProductList";
}

<div class="row">
    <div class="col-12">
        <h2>Produkter</h2>
    </div>
    <div class="col-2">
        Søgning
    </div>
    <div class="col-10">
        <div class="row">
            <div class="col-12">
                @foreach (Product product in Model)
                {
                    <div class="ProductListItem">
                        <div>
                            @product.Name
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <img src="~/Content/Images/Products/@product.Image" class="img-responsive"/>
                            </div>
                            <div class="col-3">
                                <table>
                                    <tr>
                                        <td>Varenummer</td>
                                        <td>@product.ID</td>
                                    </tr>
                                    <tr>
                                        <td>Pris</td>
                                        <td>@product.Price</td>
                                    </tr>
                                    <tr>
                                        <td>Leveringstid</td>
                                        <td>2-3</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-3">
                                <table>
                                    <tr>
                                        <td>Producent</td>
                                        <td>@product.ManufactureID</td>
                                    </tr>
                                    <tr>
                                        <td>Tilbud</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Lager antal:</td>
                                        <td>@product.StorageAmount</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-3">
                                <div>
                                    <a href="/Home/ShowProduct/@product.ID">Se Mere</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
